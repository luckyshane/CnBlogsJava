<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">#D9D9D9</item>
       <!-- <item name="tabIndicatorHeight">4dp</item>-->
        <!--<item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>-->
    </style>

    <style name="TextLineTitle">
        <item name="android:textSize">@dimen/text_plus</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="TextLineContent">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextLineSub">
        <item name="android:textSize">@dimen/text_minor</item>
        <item name="android:textColor">@color/text_light</item>
    </style>


</resources>
